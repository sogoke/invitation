<h1><%= t(:sogoke) %></h1>

<%= form_for @artist, :url => artists_path, :html => {:method => :post} do |f| %>
	<%= sogoke_error_message(@artist) %>
	
	<%= f.label t(:name) %>
	<%= f.text_field :name %>
	
	<%= f.label t(:avatar) %>
	<%= f.file_field :avatar %>
	
	<%= f.label t(:email) %>
	<%= f.text_field :email %>
	
	<%= f.label t(:description) %>
	<%= f.text_field :description %>
	
	<%= f.submit t(:submit) %>
<% end -%>
